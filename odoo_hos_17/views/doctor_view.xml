<odoo>
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">doctor.form</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor Form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialty"/>
                        <field name="phone"/>
                        <field name="department_id"/>
                    </group>
                    <group>
                        <field name="nurse_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">doctor.tree</field>
        <field name="model">doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctor List">
                <field name="name"/>
                <field name="specialty"/>
                <field name="phone"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">doctor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_doctor" name="Doctors" parent="menu_individual" action="action_doctor"/>
</odoo>
